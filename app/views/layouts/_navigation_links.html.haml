%li= link_to "Create gallery", new_gallery_path
%li= link_to "Upload image", new_image_path

%li
  = form_tag(root_path, method: "get") do
    = text_field_tag :search, params[:search], placeholder: "Search", class: 'form-control searchbox'

- if user_signed_in?

  %li.dropdown
    %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown'}}
      = current_user.name
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Profile', show_profile_path(current_user)
      %li= link_to 'Settings', edit_user_registration_path

  %li= link_to 'Sign out', destroy_user_session_path, :method=>'delete'

- else
  %li= link_to 'Sign in', new_user_session_path
  %li= link_to 'Sign up', new_user_registration_path